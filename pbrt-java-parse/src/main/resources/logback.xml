<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{1} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.github.nhirakawa" level="all" />

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
